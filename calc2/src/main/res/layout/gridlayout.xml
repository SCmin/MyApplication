<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:rowCount="5">
    <EditText
        android:id="@+id/input1"
        android:layout_column="0"
        android:layout_row="0"
        android:hint="숫자1"
        android:layout_gravity="fill_horizontal" />
    <EditText
        android:id="@+id/input2"
        android:layout_column="0"
        android:layout_row="1"
        android:hint="숫자2"
        android:layout_gravity="fill_horizontal"
        />
    <GridLayout
        android:columnCount="5"
        android:rowCount="2"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:text="0"
            android:id="@+id/zero"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_width="@dimen/GridLayout_width"
            android:layout_height="match_parent"
            />

        <Button
            android:text="1"
            android:id="@+id/one"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_width="@dimen/GridLayout_width"
            android:layout_height="match_parent"
            />

        <Button
            android:text="2"
            android:id="@+id/two"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_width="@dimen/GridLayout_width"
            android:layout_height="match_parent"
            />
        <Button
            android:text="3"
            android:id="@+id/three"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_width="@dimen/GridLayout_width"
            android:layout_height="match_parent"
            />
        <Button
            android:text="4"
            android:id="@+id/four"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_width="@dimen/GridLayout_width"
            android:layout_height="match_parent"
            />
        <Button
            android:text="5"
            android:id="@+id/five"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_width="@dimen/GridLayout_width"
            android:layout_height="match_parent"
            />

        <Button
            android:text="6"
            android:id="@+id/six"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="@dimen/GridLayout_width"
            android:layout_height="match_parent"
            />

        <Button
            android:text="7"
            android:id="@+id/seven"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_width="@dimen/GridLayout_width"
            android:layout_height="match_parent"
            />
        <Button
            android:text="8"
            android:id="@+id/eight"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_width="@dimen/GridLayout_width"
            android:layout_height="match_parent"
            />
        <Button
            android:text="9"
            android:id="@+id/nine"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_width="@dimen/GridLayout_width"
            android:layout_height="match_parent"
            />
    </GridLayout>
    <Button
        android:text="더하기"
        android:id="@+id/plus"
        android:layout_gravity="fill_horizontal"
        android:onClick="onClick"
        />
    <Button
        android:text="빼기"
        android:id="@+id/minus"
        android:layout_gravity="fill_horizontal"
        android:onClick="onClick"
        />
    <Button
        android:text="곱하기"
        android:id="@+id/multi"
        android:layout_gravity="fill_horizontal"
        android:onClick="onClick"
        />
    <Button
        android:text="나누기"
        android:id="@+id/divide"
        android:layout_gravity="fill_horizontal"
        android:onClick="onClick"
        />
    <TextView
        android:text="계산결과 : "
        android:id="@+id/resultView"
        android:layout_gravity="fill_horizontal"
        android:textSize="20dp"
        android:textColor="#FF0000"
        />

</GridLayout>
